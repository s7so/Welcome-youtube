# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql+psycopg://atlas:atlas@postgres:5432/atlas

# Redis / Celery
REDIS_URL=redis://redis:6379/0

# FingerTec Integration
# Mode: "db" (default) or "sdk"
FINGERTEC_MODE=db
# DB mode settings (example for Ingress on MSSQL via ODBC/SQLAlchemy)
FINGERTEC_DB_URL=mssql+pyodbc://user:pass@INGRESS_DSN?driver=ODBC+Driver+17+for+SQL+Server
# Query must return columns: employee_id, timestamp, type (optional)
FINGERTEC_DB_QUERY=SELECT employee_id, check_time as timestamp, log_type as type FROM attendance_device_logs WHERE check_time > :since ORDER BY check_time ASC
# SDK mode settings
FINGERTEC_IP=192.168.1.100
FINGERTEC_PORT=4370
SYNC_INTERVAL_MINUTES=5